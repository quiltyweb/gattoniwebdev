<!-- ================= HERO ================= -->
<section class="bg-gray-200">
  <div class="max-w-7xl mx-auto px-6 py-20 flex flex-col items-center-safe">
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold max-w-3xl leading-tight">
      Web design & development<br>
      with Accessibility in mind.
    </h1>
    <%= link_to "Request a Quote", "#contact", class: "mt-8 inline-block bg-black text-white px-5 py-3 rounded-full text-sm font-medium hover:opacity-90" %>
  </div>
</section>
<!-- ================= CORE SERVICES ================= -->
<section id="services" class="bg-gray-100" aria-labelledby="core-services-title">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <h2 id="core-services-title" class="font-semibold mb-6">Our Core Services</h2>
    <div class="flex flex-col md:flex-row gap-4 mb-6">
      <div class="flex-1 bg-white border rounded-lg p-4 font-semibold">
        Web Design and Development
      </div>
      <div class="flex-1 bg-white border rounded-lg p-4 font-semibold">
        Web Accessibility Reports
      </div>
      <div class="flex-1 bg-white border rounded-lg p-4 font-semibold">
        Shopify Store development
      </div>
    </div>
  </div>
</section>
<!-- ================= LATEST PROJECT ================= -->
<section id="project" aria-labelledby="latest-project-title">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <h2 id="latest-project-title" class="font-semibold mb-6">Our Latest Project</h2>
    <div class="flex flex-col lg:flex-row gap-6">
      <div class="bg-accent rounded-xl flex items-center justify-center h-48 lg:w-1/3 font-semibold text-lg">
        Project Name Here
      </div>
      <div class="flex-1 flex flex-wrap gap-4">
        <div class="border rounded-lg p-4 flex-1 min-w-[200px]">
          Responsive web design & development
        </div>
        <div class="border rounded-lg p-4 flex-1 min-w-[200px]">
          Web Accessibility
        </div>
        <div class="border rounded-lg p-4 flex-1 min-w-[200px]">
          Shopify integration
        </div>
        <div class="border rounded-lg p-4 flex-1 min-w-[200px]">
          SEO friendly
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ================= ABOUT ================= -->
<section id="about" class="bg-gray-200" aria-labelledby="our-team-title">
  <div class="max-w-7xl mx-auto px-6 py-16 flex flex-col">
    <h2 id="our-team-title" class="font-semibold mb-6">Our Team</h2>
    <div class="flex flex-col lg:flex-row gap-8">
      <div class="bg-white border rounded-xl h-48 lg:w-1/3">placeholder space for an image</div>
      <div class="flex-1 flex flex-col justify-between">
        <p class="max-w-md font-medium">
          We are a <strong>multidisciplinary team</strong> that design, code and deliver accessible websites.
        </p>
      </div>
    </div>
  </div>
</section>
<!-- ================= CONTACT ================= -->
<section id="contact" aria-labelledby="contact-title">
  <div class="max-w-7xl mx-auto px-6 py-16 flex flex-col lg:flex-row gap-10">
    <div class="flex-1 flex flex-col lg:flex-row gap-3 justify-between" >
      <div class="flex-1 flex flex-col" id="contact-form-container" >
        <h2 id="contact-title" class="font-semibold mb-4">Contact Us</h2>
        <%= render "form", contact: @contact %>
      </div>
    </div>
  </div>
</section>